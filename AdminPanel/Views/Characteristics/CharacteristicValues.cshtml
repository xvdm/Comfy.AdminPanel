@model CharacteristicValuesViewModel
@{
    ViewData["Title"] = "Значення характеристик";
}


<div class="Page">
    <div class="header">
        <div class="namePage">
            <p>Значення характеристик</p>
        </div>
    </div>

    <div class="body body-with-sections">
        <div class="sections">
            <div class="left-section-editproduct">
                <div class="brands-table">
                    <div class="brand-lable">
                        <span>Cписок значень</span>
                    </div>
                    <table>
                        <tbody id="list-brands">
                            @foreach (var x in Model.Values)
                            {
                                <tr name="@x.Id">
                                    <td><p>@x.Id | @x.Value</p></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.TotalPages > 1)
                    {
                        <div class="pagination-section">
                            @if (Model.CurrentPage == 1)
                            {
                                <button class="page-num">Previous</button>
                            }
                            else
                            {
                                <form class="page-form" method="post" asp-controller="Characteristics" asp-route-pageNumber="@(Model.CurrentPage-1)" asp-action="CharacteristicValues">
                                    <button class="page-num" type="submit">Previous</button>
                                </form>
                            }

                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                @if (i == Model.CurrentPage)
                                {
                                    <form class="current-page-form" method="post" asp-controller="Characteristics" asp-route-pageNumber="@i" asp-action="CharacteristicValues">
                                        <button type="submit">@i</button>
                                    </form>
                                }
                                else
                                {
                                    <form class="page-form" method="post" asp-controller="Characteristics" asp-route-pageNumber="@i" asp-action="CharacteristicValues">
                                        <button type="submit">@i</button>
                                    </form>
                                }
                            }

                            @if (Model.CurrentPage == Model.TotalPages)
                            {
                                <button class="page-num" type="submit">Next</button>
                            }
                            else
                            {
                                <form class="page-form" method="post" asp-controller="Characteristics" asp-route-pageNumber="@(Model.CurrentPage+1)" asp-action="CharacteristicValues">
                                    <button class="page-num" type="submit">Next</button>
                                </form>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>