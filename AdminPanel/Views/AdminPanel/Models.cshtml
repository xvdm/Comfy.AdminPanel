@model ModelsViewModel
@{
    ViewData["Title"] = "Models";
}
<div class="Page">
    <div class="header">
        <div class="namePage">
            <p>Редагування Моделей</p>
        </div>
    </div>

    <div class="body body-with-sections">
        <div class="sections">
            <div class="left-section-editproduct">
                <div class="comments-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Відповідь</th>
                            </tr>
                        </thead>
                        <tbody id="list-brands">
                            @foreach (var x in Model.Questions)
                            {
                                <tr name="@x.Id">
                                    <td><p>@x.Text</p></td>
                                    <td><button value="@x.Id,@x.Name" data-bs-toggle="modal" data-bs-target="#staticBackdrop" type="button" name="edit-brand">Редагувати</button></td>
                                    <td><button value="@x.Id" type="button" name="delete-brand">Видалити</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.TotalPages > 1)
                    {
                        <div class="pagination-section">

                            @if (Model.CurrentPage == 1)
                            {
                                    <button class="page-num" >Previous</button>
                            }
                            else
                            {
                                <form class="page-form" method="post" asp-controller="Comments" asp-route-pageNumber="@(Model.CurrentPage-1)" asp-action="ActiveComments">
                                    <button class="page-num" type="submit">Previous</button>
                                </form>
                            }
                            @for (var i = 1; i <= Model.TotalPages;i++)
                            {
                                @if (i == Model.CurrentPage)
                                {
                                    <form class="current-page-form" method="post" asp-controller="Comments" asp-route-pageNumber="@i" asp-action="ActiveComments">
                                        <button type="submit">@i</button>
                                    </form>
                                }
                                else
                                {
                                    <form class="page-form" method="post" asp-controller="Comments" asp-route-pageNumber="@i" asp-action="ActiveComments">
                                        <button type="submit">@i</button>
                                    </form>
                                }
                            }
                            @if (Model.CurrentPage == Model.TotalPages)
                            {
                                    <button class="page-num" type="submit">Next</button>
                            }else
                            {
                                <form class="page-form" method="post" asp-controller="Comments" asp-route-pageNumber="@(Model.CurrentPage+1)" asp-action="ActiveComments">
                                    <button class="page-num" type="submit">Next</button>
                                </form>
                            }
                        </div>
                    }
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Редагування</h5>
                                </div>
                                <div class="modal-body">
                                    <input id="edit-value-id" value="" type="hidden" />
                                    <p class="modal-title-input">Назва</p>
                                    <input class="modal-input" id="edit-model" value="" placeholder="" />
                                </div>
                                <div class="modal-footer">
                                    <button id="close-modal" type="button" data-bs-dismiss="modal">Закрити</button>
                                    <button id="save-changes-modal" type="button">Зберігти</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/EditModel.js"></script>
}